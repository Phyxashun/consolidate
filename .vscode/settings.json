{
    // prettier-ignore

    /**
     ** WORKBENCH & UI
     */
    "workbench.colorTheme": "Theme Darker",
    "workbench.iconTheme": "vs-seti",
    "workbench.productIconTheme": "Default",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "json.validate.enable": false,

    /**
     ** EDITOR VISUALS & TYPING
     */
    "editor.fontFamily": "'JetBrainsMono Nerd Font'",
    "editor.fontSize": 14,
    "editor.lineHeight": 1.4,
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.smoothScrolling": true,
    "editor.showDeprecated": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.stickyScroll.enabled": true,
    "editor.semanticTokenColorCustomizations": {
        "enabled": true
    },
    /**
     ** EDITOR CURSOR
     */
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",

    /**
     ** INDENTATION & LAYOUT
     */
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 140,
    "editor.rulers": [140],

    /**
     ** GUIDES & BRACKETS
     */
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveBracketPair": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

    /**
     ** FILES & TERMINAL
     */
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.15,

    /**
     ** FORMATTING & INTELLISENSE
     */
    "editor.defaultFormatter": "prettier.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabCompletion": "onlySnippets",

    // PRETTIER - Use
    //"prettier.semi": true,
    //"prettier.singleQuote": true,
    //"prettier.trailingComma": "all",
    //"prettier.printWidth": 140,
    //"prettier.bracketSpacing": true,

    /**
     ** TYPESCRIPT & JAVASCRIPT GLOBAL
     */
    "typescript.format.enable": false,
    "typescript.format.semicolons": "insert",
    "typescript.preferences.quoteStyle": "single",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.suggest.paths": false,
    "javascript.format.enable": false,
    "javascript.format.semicolons": "insert",
    "javascript.preferences.quoteStyle": "single",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.paths": false,

    /**
     ** LANGUAGE SPECIFIC OVERRIDES
     */
    "[typescript]": {
        "files.autoSave": "onFocusChange",
        "editor.defaultFormatter": "prettier.prettier-vscode",
        "editor.wordWrap": "on"
    },
    "[typescriptreact]": {
        "files.autoSave": "onFocusChange",
        "editor.defaultFormatter": "prettier.prettier-vscode",
        "editor.wordWrap": "on"
    },
    "[javascript]": {
        "files.autoSave": "onFocusChange",
        "editor.defaultFormatter": "prettier.prettier-vscode",
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "files.autoSave": "onFocusChange",
        "editor.defaultFormatter": "prettier.prettier-vscode",
        "editor.wordWrap": "on"
    },
    "[json]": {
        "files.autoSave": "onFocusChange",
        "editor.defaultFormatter": "prettier.prettier-vscode",
        "editor.wordWrap": "on"
    },
    "[jsonc]": {
        "files.autoSave": "onFocusChange",
        "editor.defaultFormatter": "prettier.prettier-vscode",
        "editor.wordWrap": "on"
    },

    /**
     ** EXTENSION: BETTER COMMENTS
     */
    "better-comments.multilineComments": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "fixme",
            "color": "#008000",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "fixit",
            "color": "#008000",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "fix",
            "color": "#008000",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "bug",
            "color": "#008000",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        }
    ]
}
